<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackgroundGrey">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/dimText"
        android:text="Nuovo elemento:"
        android:textColor="@color/colorText1"
        android:layout_margin="@dimen/dimMarginBig"
        android:id="@+id/nuovoElementoTitolo"
        />
    <TextView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:background="@drawable/fab_back"
        android:text="+"
        android:textSize="@dimen/dimText"
        android:layout_margin="@dimen/dimMargin"
        android:padding="@dimen/dimMargin"
        android:textColor="@color/colorText2"
        android:id="@+id/btnAggiungiElemento"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nuovoElementoTitolo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/editNome"
        android:layout_margin="@dimen/dimMarginBig"
        android:inputType="text"
        android:hint="Nome"
        android:textSize="@dimen/dimText"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMarginBig"
        app:layout_constraintTop_toBottomOf="@id/editNome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/editQuantita"
        android:inputType="numberDecimal"
        android:hint="QuantitÃ "
        android:textSize="@dimen/dimText"
        />
    <TextView
        android:layout_margin="@dimen/dimMarginBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editNome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/editQuantita"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/txtNewData"
        android:textColor="@color/colorText1"
        android:text="14/06/1998"
        android:textSize="@dimen/dimText"
        />
</androidx.constraintlayout.widget.ConstraintLayout>